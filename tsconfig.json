{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "scripts/test-request.ts"],
  "exclude": ["node_modules"]
}
